      <% end %>
      <hr class="my-6 border-gray-200"/>
      <%= link_to root_path, class: "flex items-center px-4 py-2 mt-2
      text-gray-600 transition-colors duration-300 transform rounded-md
       hover:bg-gray-200
       hover:text-gray-700" do %>
        <svg
