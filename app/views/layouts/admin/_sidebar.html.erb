    <h1 class="text-3xl text-gray-800">Prairify</h1>
    <nav class="flex flex-wrap lg:flex-col justify-center mt-4">
      <%= link_to admin_root_path, class: "flex items-center px-4 py-2 mt-2
      text-gray-600 transition-colors duration-300 transform rounded-md
       hover:bg-gray-200
       hover:text-gray-700" do %>
        <svg
          class="h-5 w-5"
          viewBox="0 0 24 24"
          fill="#0092E4"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
