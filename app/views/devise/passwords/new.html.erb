<section class="w-full max-w-md bg-white">
  <div class="container mx-auto flex flex-col items-center justify-center px-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-md" }) do |f| %>
    <h1 class="mt-4 text-center text-4xl font-bold">Forgot your password?</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="relative mt-8 flex items-center">
        <span class="absolute">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-3 mt-1 h-6 w-6 text-gray-300"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
        </span>
        <%= f.label :email, class: "hidden" %>
        <%= f.email_field :email,
      autofocus: true, placeholder: "Email address", class: "form-field
      indent-6", autocomplete: "email" %>
      </div>
<div class="mt-6"><%= f.submit "Reset password", class: "w-full btn m-0" %></div>
    <% end %>
    <div class="mt-4 flex justify-center"><%= link_to "Back", :back %></div>
  </div>
</section>
