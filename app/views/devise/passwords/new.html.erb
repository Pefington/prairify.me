<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-md mx-auto flex flex-col items-center justify-center px-6" }) do |f| %>
  <h1 class="mt-4 text-center text-4xl font-bold"><%= t('fgtpsswd') %></h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="relative mt-8 flex items-center">
    <span class="absolute">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="mx-3 mt-1 h-6 w-6 text-neutral-light"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        />
      </svg>
    </span>
    <%= f.label :email, class: "hidden" %>
    <%= f.email_field :email,
  autofocus: true, placeholder: t('holdermail'), class: "form-field
  indent-6", autocomplete: "email" %>
  </div>
  <%= f.submit t('resetpsswd'), class: "w-full btn mt-6" %>
<% end %>

<%= link_to t('back'), new_user_session_path, class:"mt-4 flex justify-center" %>
