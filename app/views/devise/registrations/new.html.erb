<section class="w-full max-w-md bg-inverse">
  <div class="container mx-auto flex flex-col items-center justify-center px-6">
    <%= form_for(resource, as: resource_name, url:
    registration_path(resource_name), html: {class: "w-full max-w-md"}) do |f| %>
      <h1 class="mt-4 text-center text-4xl font-bold"><%=t'signup'%></h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="relative mt-8 flex items-center">
        <span class="absolute">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-3 h-6 w-6 text-neutral-light"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
        </span>
        <%= f.label :email, class: "hidden" %>
        <%= f.email_field :email,
      autofocus: true, placeholder: t('holdermail'), class: "form-field
      indent-6", autocomplete: "email" %>
      </div>
      <div class="mt-3 mb-1">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
        <% end %>
      </div>
      <div class="relative flex items-center">
        <span class="absolute">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-3 h-6 w-6 text-neutral-light"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            />
          </svg>
        </span>
        <%= f.label :password, class: "hidden" %>
        <%= f.password_field :password, placeholder: t('holderpassword'), class:"form-field indent-6", autocomplete: "new-password" %>
      </div>
      <div class="relative mt-4 flex items-center">
        <span class="absolute">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="mx-3 h-6 w-6 text-neutral-light"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            />
          </svg>
        </span>
        <%= f.label :password_confirmation, class: "hidden" %><br />
        <%= f.password_field :password_confirmation, placeholder: t('holderconfirmpassword'), class:"form-field indent-6", autocomplete: "new-password" %>
      </div>
      <div class="mt-6">
        <%= f.submit t('signupbtn'), class: "btn w-full m-0" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>
