<section class="card flex-col max-w-sm px-4 py-8">
  <h2 class="text-4xl mb-8 text-center"><%= t 'profiltitle' %></h2>
  <% if @profile.username %>
    <h3 class="text-2xl"><%= t 'nameprofil' %></h3>
    <p class="text-xl mb-4"><%= @profile.username %></p>
  <% end %>
  <h3 class="text-2xl"><%= t 'emailprofil' %></h3>
  <p class="text-xl mb-4"><%= @profile.email %></p>
  <p class="text-lg mb-4"><%= t 'subjectprofil' %></p>
  <%= link_to t('btnprofil'), edit_user_registration_path, class: "btn btn-middle" %>
</section>
<section class="flex flex-col mt-12">
  <h2 class="text-4xl mb-8 text-center"><%= t 'projectprofil' %></h2>
  <%= render @projects %>
</section>
