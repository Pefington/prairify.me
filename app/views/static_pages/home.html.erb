<% if !current_user %>
  <%# HERO %>
  <section
    class="
      -mt-12
      flex
      w-full
      flex-col
      items-center
      bg-[url('https://images.unsplash.com/photo-1605802447037-d660fc4b2fd2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80')]
      bg-cover
      bg-center
      p-8
      mb-12
    "
    >
    <div class="h-5/6 max-w-xl rounded-lg bg-inverse/50 p-6 text-center flex flex-col items-center">
      <h2 class="mb-2 font-semibold text-2xl">
        <%= t'title' %>
      </h2>
      <br>
      <p class="font-medium tracking-tight text-base sm:text-lg md:text-xl ">
        <%= t'subject' %>
      </p>

      <%= link_to t('joinhomebtn'), new_user_registration_path, class: "m-8 btn btn-middle text-xl font-bold px-8 py-3 my-8" %>

      <h1 class="mb-3"><%= t 'paragraph' %></h1>

      <%# Search Bar %>
      <article class="flex items-center z-20 pr-4 xl:ml-4 w-full">
        <%= button_to search_index_path, method: :get, params: {search: 'geoloc'}, class: "p-1 link text-middle hover:text-inverse mr-4
        lg:mx-2 xl:-mr-4" do %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-9 h-9"
            >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
            />
          </svg>
        <% end %>
        <%= render "shared/search_bar" %>
      </article>

    </div>
  </section>
<% end %>

<section
  x-data="{
        activeSlide: 1,
        activeSlide: 2,
        activeSlide: 3,
        activeSlide: 4,
        slides: Array.from({ length: <%= @projects.count %> }, (_, i) => i + 1)
      }"
  class="relative flex flex-col justify-center items-center px-4 sm:w-2/3"
>
  <h1 class="text-2xl capitalize lg:text-3xl xl:text-4xl text-neutral-light">
    <%= t'our' %>
    <span class="text-soft"><%= t('budding') %></span>
    <br>
    <%= t'homesubject' %>
  </h1>

  <div class=" mt-8 flex justify-center items-center w-full">

    <%= render @projects %>

  </div>
</section>
