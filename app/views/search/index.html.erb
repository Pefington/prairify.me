<% if @local_plants == nil %>

  <p>No result. You could try a wider area (county, d√©partement...)</p>

<% else %>

  <% if current_user %>
    <section class="flex flex-col items-center justify-evenly">
      <h3 class="text-xl">Select your plants then:</h3>
      <%= link_to 'New project', new_project_path, class: "btn-muted",
  params:[@plants] %>
    </section>

  <% end %>

  <div class="flex flex-col items-center space-y-4 text-center">
    <p class="text-xl cursor-pointer"><%= @hits %> results for <%= @place %></p>
    <p>-</p>
  </div>

  <div class="w-full p-5 sm:p-10 flex flex-wrap justify-evenly h-min">
    <% @local_plants.each do | plant | %>
      <article
        x-data="{ shown : true }"
        x-transition.duration.500ms
        x-cloak
        x-show="shown"
        x-transition
        class="
          mb-12
          mx-4
          flex
          w-full
          max-w-sm
          flex-col
          items-center
          rounded-lg
          bg-white
          shadow-lg
        "
      >
        <% @plant = plant %>
        <%= render 'layouts/plant' %>
      </article>
    <% end %>
  </div>

<% end %>
