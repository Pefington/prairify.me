<%if @plants == nil%>
  <p>Sorry, couldn't find any plant, please try again.</p>
<%else%>
  <div class="flex flex-col items-center space-y-4">
    <h2 class="text-xl">Results for:</h2>
    <p class><%= @place %></p>
    <p>-</p>
  </div>

  <div class="p-5 sm:p-10 grid grid-cols-1 md:grid-cols-2 gap-10 lg:grid-cols-3 h-min">
    <% 12.times do%>
      <% @plant = @plants.sample %>
      <%= render 'layouts/plant' %>

    <%end%>
  </div>
<%end%>

<section class="flex flex-col justify-evenly items-center space-y-8">
  <%if current_user %>
    <h3 class="text-xl">Happy with the selected plants?</h3>
    <%= link_to 'New project', new_project_path, class: "btn-muted", params:[@plants] %>
  <%else%>
    <h3 class="text-xl">Happy with the selected plants?</h3>
    <%= link_to "New project", user_session_path, class: "btn-muted" %>
  <%end%>
  <p>or</p>
    <h3 class="text-xl">Search another location</h3>
    <%= render 'layouts/search_bar'%>
</section>
