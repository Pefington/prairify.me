<div x-data="{ selectedCount: <%= @selected_plants.count %> }">
  <% if @local_plants == nil %>
      <% if params[:search]== 'geoloc'%>
        <p>
          <%=t 'nogeolocsearchpage'%>
        </p>
      <%else%>
        <p>
          <%=t 'noresultsearchpage'%>
        </p>
      <%end%>
      <%= render 'shared/search_bar'%>
  <% else %>
    <section class="flex flex-col items-center justify-between text-center">
      <p class="text-xl"><%= @hits %>
       <%=t'textsearch1'%>
        <%= @place %></p>
      <% if current_user %>
        <h3 class="mt-8 text-xl">
          <span x-text="selectedCount"></span>
          <%=t 'textsearch2'%>
        </h3>
        <%= link_to t('addplantsearchpage'), new_project_path, class:
    "btn", params:[@plants] %>
        <div @click="eliminated = false, selected = false, selectedCount = 0">
          <%= button_to t('resetselectsearchpage'), reset_selected_plants_path, method:
      :post, remote: :true, class: "btn-warning my-8" %>
        </div>
      <% else %>
        <p class="flex flex-col text-2xl sm:flex-row sm:items-center">
          <%= link_to t('joinhomebtn'), new_user_registration_path, class: "btn" %>
          <%=t 'startprojectsearchpage'%>
        </p>
      <% end %>
    </section>
    <section class="flex h-min w-full flex-wrap justify-evenly p-5 sm:p-10">
      <% @local_plants.each do | plant | %>
        <article
          x-data="{
            eliminated : false,
            selected : <%= @selected_plants.include?(plant[:id]) %>
          }"
          x-transition
          x-transition.duration.500ms
          x-cloak
          x-show="!eliminated"
          class="card max-w-sm w-full flex-col items-center"
          >
          <% @plant = plant %>
          <%= render 'shared/plant' %>
        </article>
      <% end %>
    </section>
  <% end %>
    <button id="to-top-button" title="Go To Top"
        class=" fixed z-90 bottom-8 right-8 border-0 w-12 h-12 rounded-full drop-shadow-md bg-soft text-white text-3xl font-bold" button x-cloak x-data="{scroll : false}" @scroll.window="document.documentElement.scrollTop > 20 ? scroll = true : scroll = false" x-show="scroll" @click="window.scrollTo({top: 0, behavior: 'smooth'})">&uarr;</button>
</div>
