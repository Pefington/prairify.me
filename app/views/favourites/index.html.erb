<section class="w-full md:w-2/3 flex flex-col text-center">
  <h1 class="mt-4 font-bold text-4xl text-center"><%=t 'ftitle1'%></h1>
  <hr class="mx-4 my-8">
  <p class="text-center my-8"><%=t 'ftitle'%></p>

  <% if @projects.empty? %>
    <section class="bg-white rounded-lg shadow-lg m-4">
      <p><%=t 'subjectf'%></p><br>
      <h2><%=t 'paraf'%></h2><br>
      <%= button_to t('btnshowproject'), projects_path, method: :get, class:'btn' %>
    </section>
  <% else %>
    <section
      class="
        p-5
        sm:p-10
        grid
        grid-cols-1
        md:grid-cols-2
        gap-10
        lg:grid-cols-3
        h-min"
    >
      <%= render @projects %>
    </section>
  <% end %>
</section>
