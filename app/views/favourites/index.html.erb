<section class="w-full flex flex-col text-center justify-center items-center">
  <h1 class="mt-4 text-4xl text-center"><%=t 'favouritetitle1'%></h1>
  <p class="text-center my-8"><%=t 'favouritetitle'%></p>

  <% if @projects.empty? %>
    <section class="card flex-col p-8">
      <p><%=t 'favouritesubject'%></p><br>
      <h2><%=t 'favouriteparagraph'%></h2><br>
      <%= button_to t('btnshowproject'), projects_path, method: :get, class:'btn btn-middle' %>
    </section>
  <% else %>
    <section
      class="
        w-4/5
        grid
        grid-cols-1
        md:grid-cols-2
        gap-8
        lg:grid-cols-3
        h-min"
    >
      <%= render @projects %>
    </section>
  <% end %>
</section>
