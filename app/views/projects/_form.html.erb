<%= form_with(model: project, class: "contents") do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="bg-white w-5/6 md:w-full max-w-md flex flex-col justify-center mt-6 mx-auto">
      <div class="relative flex items-center mt-4">
        <%= form.label :name, class:"hidden" %>
        <%= form.text_field :name, placeholder: "Name", class:"form-field indent-0" %>
      </div>

      <div class="relative flex items-center mt-4">
        <%= form.label :description, class:"hidden" %>
        <%= form.text_area :description, rows: 4, placeholder: "Description", class:"form-field indent-0" %>
      </div>

      <div class="relative flex items-center mt-4">
        <%= form.label :place_id, class:"hidden" %>
        <%= form.number_field :place_id, placeholder: "Location", class:"form-field indent-0" %>
      </div>

      <div class="relative flex items-center mt-4">
        <h3 class="mr-3">When do you want to begin your project?</h3>
        <%= form.label :begin, class:"hidden" %>
        <%= form.datetime_field :begin, class:"form-field indent-0 text-gray-500" %>
      </div>

      <div class="relative flex items-center mt-4">
        <h3 class="mr-3">What does your lawn look like now?</h3>
        <%= form.label :photos, class:"hidden" %>
        <%= form.file_field :photos, class: "form-field indent-0 text-gray-500"%>
      </div>

      <div class="relative flex items-center mt-4">
        <h3 class="mr-3">When do you want to end your project?</h3>
        <%= form.label :finish, class:"hidden" %>
        <%= form.datetime_field :finish, class:"form-field indent-0 text-gray-500" %>
      </div>

      <div class="relative flex justify-center mt-4">
        <%= form.submit class: "btn" %>
      </div>
    </div>
  </section>   
<% end %>
