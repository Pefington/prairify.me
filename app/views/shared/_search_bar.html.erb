<%= form_with url: search_index_path, method: :get, class: "flex w-full lg:mx-2 xl:mx-8" do |form| %>
  <div
    class="
      flex
      items-center
      ring-2
      ring-soft
      rounded-md
      focus:ring-vivid
      w-full
      bg-inverse
    "
  >
    <span class=" bg-inverse text-neutral-light/50 px-1 rounded-l-md">
      <svg class="w-5 h-5 border-none" viewBox="0 0 24 24" fill="none">
        <path
          d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        ></path>
      </svg>
    </span>
    <input
      type="search"
      name="search"
      class="
        bg-inverse
        border-none
        py-2
        rounded-r-md
        text-neutral-light
        flex-1
      "
      placeholder= <%= t'holdersearch' %>
    >
  </div>
<% end %>
