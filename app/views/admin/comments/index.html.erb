<section class="flex flex-col">
  <div class="mx-8 mt-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
    <div>
      <h2 class="mb-2 text-xl text-gray-900"><%= t'searcc' %></h2>
      <span class="text-base text-gray-500"><%= t'searcc1' %></span>
    </div>
    <div class="flex flex-col items-center justify-start">
      <%= search_form_for @q, url: :admin_comments, class: "w-full flex flex-col
      lg:flex-row" do |f| %>
        <div class="mt-4 flex flex-col lg:w-full lg:flex-row lg:items-center">
          <span class="absolute">
            <svg
              class="mx-2 my-3 h-5 w-5"
              viewBox="0 0 24 24"
              fill="#0092E4"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M21.07,16.83,19,14.71a3.08,3.08,0,0,0-3.4-.57l-.9-.9a7,7,0,1,0-1.41,1.41l.89.89A3,3,0,0,0,14.71,19l2.12,2.12a3,3,0,0,0,4.24,0A3,3,0,0,0,21.07,16.83Zm-8.48-4.24a5,5,0,1,1,0-7.08A5,5,0,0,1,12.59,12.59Zm7.07,7.07a1,1,0,0,1-1.42,0l-2.12-2.12a1,1,0,0,1,0-1.42,1,1,0,0,1,1.42,0l2.12,2.12A1,1,0,0,1,19.66,19.66Z"
              />
            </svg>
          </span>
          <%= f.label :content, class: "hidden" %>
          <%= f.text_field :content_cont,
        autofocus: true, placeholder: t('rsherch'), class: "border-gray-300 w-full rounded-lg border-solid indent-6 py-3" %>
        </div>
        <div class="mt-4 flex flex-row">
          <%= f.submit class: "lg:ml-4 mr-2 px-8 py-3 rounded-md bg-[#0092E4] hover:bg-[#00a7e4]
        text-white cursor-pointer" %>
          <%= link_to "Clear", request.path, class:"px-8 py-3 rounded-md bg-gray-400 text-white" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col lg:w-full">
    <div class="m-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
      <div class="mb-4 flex items-center justify-between">
        <div>
          <h3 class="mb-2 text-xl text-gray-900"><%= t'allco' %></h3>
          <span class="text-base font-normal text-gray-500"><%= t'allco1' %></span>
        </div>
      </div>
      <div class="mt-8 flex flex-col">
        <div class="overflow-x-auto rounded-lg">
          <div class="inline-block min-w-full align-middle">
            <div class="overflow-hidden shadow sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      scope="col"
                      class="
                        p-4
                        text-left
                        text-xs
                        font-medium
                        uppercase
                        tracking-wider
                        text-gray-500
                      "
                    >
                      ID
                    </th>

                    <th
                      scope="col"
                      class="
                        p-4
                        text-left
                        text-xs
                        font-medium
                        uppercase
                        tracking-wider
                        text-gray-500
                      "
                    >
                      <%= t'contento' %>
                    </th>
                    <th
                      scope="col"
                      class="
                        p-4
                        text-left
                        text-xs
                        font-medium
                        uppercase
                        tracking-wider
                        text-gray-500
                      "
                    >
                      <%= t'posteon' %>
                    </th>
                    <th
                      scope="col"
                      class="
                        p-4
                        text-left
                        text-xs
                        font-medium
                        uppercase
                        tracking-wider
                        text-gray-500
                      "
                    >
                      <%= t'postby' %>
                    </th>
                    <th
                      scope="col"
                      class="
                        p-4
                        text-left
                        text-xs
                        font-medium
                        uppercase
                        tracking-wider
                        text-gray-500
                      "
                    >
                      Manage
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @comments.each do |comment| %>
                    <% row_group_class = cycle('bg-white','bg-gray-50') %>
                    <tr class=<%= row_group_class %>>
                      <td class="whitespace-nowrap pl-4 text-sm font-normal text-gray-900">
                        <%= comment.id %>
                      </td>
                      <td class="whitespace-nowrap pl-4 text-sm font-semibold text-gray-900">
                        <%= comment.content %>
                      </td>
                      <td class="whitespace-nowrap pl-4 text-sm font-normal text-gray-500">
                        <%= comment.created_at.strftime("%d/%m/%Y") %>
                      </td>
                      <td class="whitespace-nowrap pl-4 text-sm font-normal text-gray-500">
                        <%= User.find_by(id: comment.user_id).email %>
                      </td>
                      <td
                        class="
                          flex
                          flex-row
                          whitespace-nowrap
                          pl-1
                          text-sm
                          font-semibold
                          text-gray-900
                        "
                      >
                        <%= link_to edit_admin_comment_path(comment.id), class:
                      "flex items-center px-4 py-2 mt-2 text-gray-600
                      transition-colors duration-300 transform rounded-md " do %>
                          <svg
                            class="h-5 w-5"
                            viewBox="0 0 24 24"
                            fill="#0092E4"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                          >
                            <path
                              d="M5,18H9.24a1,1,0,0,0,.71-.29l6.92-6.93h0L19.71,8a1,1,0,0,0,0-1.42L15.47,2.29a1,1,0,0,0-1.42,0L11.23,5.12h0L4.29,12.05a1,1,0,0,0-.29.71V17A1,1,0,0,0,5,18ZM14.76,4.41l2.83,2.83L16.17,8.66,13.34,5.83ZM6,13.17l5.93-5.93,2.83,2.83L8.83,16H6ZM21,20H3a1,1,0,0,0,0,2H21a1,1,0,0,0,0-2Z"
                            />
                          </svg>
                        <% end %>
                        <%= button_to admin_comment_path(comment.id),
                      method: :delete, form: { data: { 'turbo-confirm': 'Are you
                      sure?' } }, class: "w-full flex items-center px-4 py-2
                      mt-2 text-gray-600 transition-colors duration-300
                      transform rounded-md " do %>
                          <svg
                            class="h-5 w-5"
                            viewBox="0 0 24 24"
                            fill="#F32013"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path
                              d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z"
                            />
                          </svg>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @comments %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
