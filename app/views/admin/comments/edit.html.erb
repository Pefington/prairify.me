<section class="flex h-full w-full flex-col justify-center">
  <div class="container mx-auto flex flex-col items-center justify-center px-6">
    <%= form_with(model: [:admin, @comment], class: "bg-white rounded-lg m-8 p-8
    w-full max-w-md") do |form| %>
      <h2 class="mb-2 text-2xl font-bold text-gray-900"><%=t'modic'%></h2>
      <div class="my-5">
        <%= form.label t('contento') %>
        <%= form.text_field :content, class: "w-full
      mt-1 py-3 text-gray-700 bg-white border rounded-md" %>
      </div>
      <div class="mt-6"><%= form.submit t('upt'), class: "btn w-full m-0" %></div>
      <div class="mt-4 flex justify-center"><%= link_to t('bretour'), :back class: "btn"%></div>
    <% end %>
  </div>
</section>
