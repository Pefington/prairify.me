<div class="lg:flex w-full">
  <div class="flex flex-col lg:w-full">
    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 m-8">
      <div class="mb-4 flex items-center justify-between">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Latest Registered Users</h3>
          <span class="text-base font-normal text-gray-500">This is a list of latest registered users</span>
        </div>
        <div class="flex-shrink-0">
          <%= link_to "View all", admin_users_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg p-2" %>
        </div>
      </div>
      <div class="flex flex-col mt-8">
        <div class="overflow-x-auto rounded-lg">
          <div class="align-middle inline-block min-w-full">
            <div class="shadow overflow-hidden sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      ID
                    </th>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Username
                    </th>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Email
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @latest_users.each do |latest_user| %>
                  <tr>
                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                      <%= latest_user.id %>
                    </td>
                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                      <%= latest_user.username %>
                    </td>
                    <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                      <%= latest_user.email %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:flex">
      <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 mx-8 mb-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @last_users_seven_days %></span>
            <h3 class="text-base font-normal text-gray-500">User signups this week</h3>
          </div>
        </div>
      </div>
      <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 mx-8 mb-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @last_users_thirty_days %></span>
            <h3 class="text-base font-normal text-gray-500">User signups this month</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-col lg:w-full">
    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 m-8">
      <div class="mb-4 flex items-center justify-between">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Latest Created Projects</h3>
          <span class="text-base font-normal text-gray-500">This is a list of latest created projects</span>
        </div>
        <div class="flex-shrink-0">
          <%= link_to "View all", admin_projects_path, class: "text-sm font-medium text-cyan-600 hover:bg-gray-100 rounded-lg p-2" %>
        </div>
      </div>
      <div class="flex flex-col mt-8">
        <div class="overflow-x-auto rounded-lg">
          <div class="align-middle inline-block min-w-full">
            <div class="shadow overflow-hidden sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      ID
                    </th>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Name
                    </th>
                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Description
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @latest_projects.each do |latest_project| %>
                  <tr>
                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                      <%= latest_project.id %>
                    </td>
                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                      <%= latest_project.name %>
                    </td>
                    <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                      <%= latest_project.description %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:flex">
      <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 mx-8 mb-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @last_projects_seven_days %></span>
            <h3 class="text-base font-normal text-gray-500">Project created this week</h3>
          </div>
        </div>
      </div>
      <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 mx-8 mb-8">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900"><%= @last_projects_thirty_days %></span>
            <h3 class="text-base font-normal text-gray-500">Project created this month</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
