<section class="w-full lg:flex">
  <div class="flex flex-col lg:w-full">
    <div class="mx-8 mt-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
      <%= area_chart User.group_by_day(:created_at, range:
      1.month.ago..Time.now, day_start: 0).count, colors: ['#0092E4'], title:
      t('num1'), dataset: { borderWidth: 3 }, download:
      true, empty: 'No data', points: false, xtitle: t('dy'), ytitle: t('nb') %>
    </div>
    <div class="mx-8 mt-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
      <div class="mb-4 flex items-center justify-between">
        <div>
          <h2 class="mb-2 text-xl font-bold text-gray-900">
            <%=t'tyl'%>
          </h2>
          <span class="text-vividfont-normal text-gray-500"
            ><%=t'tyl1'%></span
          >
        </div>
        <div class="flex-shrink-0">
          <%= link_to "View all", admin_users_path, class: "text-sm font-medium
          text-cyan-600 rounded-lg p-2" %>
        </div>
      </div>
      <div class="mt-8 flex flex-col">
        <div class="overflow-x-auto rounded-lg">
          <div class="inline-block min-w-full align-middle">
            <div class="overflow-hidden shadow sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      ID
                    </th>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      <%=t'nameprofil'%>
                    </th>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      Email
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @latest_users.each do |latest_user| %>
                  <tr>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-normal text-gray-900"
                    >
                      <%= latest_user.id %>
                    </td>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-normal text-gray-500"
                    >
                      <%= latest_user.username %>
                    </td>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-semibold text-gray-900"
                    >
                      <%= latest_user.email %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mx-8 mb-8 lg:flex lg:justify-between">
      <div
        class="mt-8 flex-1 rounded-lg bg-white p-4 shadow sm:p-6 lg:mr-4 xl:p-8"
      >
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span
              class="text-2xl font-bold leading-none text-gray-900 sm:text-3xl"
              ><%= @users_week %></span
            >
            <h2 class="text-vividfont-normal text-gray-500">
              <%=t'wk1'%>
            </h2>
          </div>
        </div>
      </div>
      <div
        class="mt-8 flex-1 rounded-lg bg-white p-4 shadow sm:p-6 lg:ml-4 xl:p-8"
      >
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span
              class="text-2xl font-bold leading-none text-gray-900 sm:text-3xl"
              ><%= @users_month %></span
            >
            <h2 class="text-vividfont-normal text-gray-500">
              <%=t'mth1'%>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-col lg:w-full">
    <div class="mx-8 mt-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
      <%= area_chart Project.group_by_day(:created_at, range:
      1.month.ago..Time.now, day_start: 0).count, colors: ['#0092E4'], title:
      t('num2'), dataset: { borderWidth: 3 }, download:
      true, empty: 'No data', points: false, xtitle: t('dy'), ytitle: t('nb1') %>
    </div>
    <div class="mx-8 mt-8 rounded-lg bg-white p-4 shadow sm:p-6 xl:p-8">
      <div class="mb-4 flex items-center justify-between">
        <div>
          <h2 class="mb-2 text-xl font-bold text-gray-900">
            <%=t'tym'%>
          </h2>
          <span class="text-vividfont-normal text-gray-500"
            ><%=t'tym1'%></span
          >
        </div>
        <div class="flex-shrink-0">
          <%= link_to "View all", admin_projects_path, class: "text-sm
          font-medium text-cyan-600 rounded-lg p-2" %>
        </div>
      </div>
      <div class="mt-8 flex flex-col">
        <div class="overflow-x-auto rounded-lg">
          <div class="inline-block min-w-full align-middle">
            <div class="overflow-hidden shadow sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      ID
                    </th>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      <%=t'nam'%>
                    </th>
                    <th
                      scope="col"
                      class="p-4 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >
                      Description
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white">
                  <% @latest_projects.each do |latest_project| %>
                  <tr>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-normal text-gray-900"
                    >
                      <%= latest_project.id %>
                    </td>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-normal text-gray-500"
                    >
                      <%= latest_project.name %>
                    </td>
                    <td
                      class="whitespace-nowrap p-4 text-sm font-semibold text-gray-900"
                    >
                      <%= latest_project.description %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mx-8 mb-8 lg:flex lg:justify-between">
      <div
        class="mt-8 flex-1 rounded-lg bg-white p-4 shadow sm:p-6 lg:mr-4 xl:p-8"
      >
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span
              class="text-2xl font-bold leading-none text-gray-900 sm:text-3xl"
              ><%= @projects_week %></span
            >
            <h2 class="text-vividfont-normal text-gray-500">
              <%=t'wk2'%>
            </h2>
          </div>
        </div>
      </div>
      <div
        class="mt-8 flex-1 rounded-lg bg-white p-4 shadow sm:p-6 lg:ml-4 xl:p-8"
      >
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <span
              class="text-2xl font-bold leading-none text-gray-900 sm:text-3xl"
              ><%= @projects_month %></span
            >
            <h2 class="text-vividfont-normal text-gray-500">
             <%=t'mth2'%>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
